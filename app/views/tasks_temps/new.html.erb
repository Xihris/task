<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <%= simple_form_for @temp do |f| %>
        <%= f.input :name, hint: 'Вводим компании используя символ ";"' %>
        <%= f.input :author_id %>
        <%= f.input :date_start, as: :date %>
        <%= f.input :date_end, as: :date %>   
        <%= f.submit 'Добавить' %>
      <% end %>
    </div>
  </div>
</div>